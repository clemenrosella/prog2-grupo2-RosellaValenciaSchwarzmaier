<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	
	<% if (user) { %>
		<%- include('./partials/headerLogueado') %>

	<% } else{ %>
		<%- include('./partials/headerDesLogueado') %>
	<% } %>

	<!-- Banner -->
	<div class="banner">
		<img src="images/inicio.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más Vendidos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for (let i = 0; i < novedades.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= novedades[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= novedades[i].imagen %>" alt="<%= novedades[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= novedades[i].nombre %></h2>
								<p><%= novedades[i].descripcion %></p>
								<p><%= novedades[i].usuario_producto.email %></p>
								<p>Comentarios: <%= novedades[i].comentarios_producto.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->


	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ultimos Lanzamientos</h2>
			</div>
			<!-- Show the "mas comentados" products -->

			<!-- <div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product.html">
						<figure class="product-box_image">
							<img src="images/products/default-image.png" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2>Nombre del producto</h2>
							<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque delectus ex</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div> --> 

			<% for (let i = 0; i < masComentados.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= masComentados[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= masComentados[i].imagen %>" alt="<%= masComentados[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= masComentados[i].nombre %></h2>
								<p><%= masComentados[i].descripcion %></p>
								<p><%= masComentados[i].usuario_producto.email %></p>
								<p>Comentarios: <%= masComentados[i].comentarios_producto.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div> 
	<!-- /Más comentados -->
		

	<%- include('./partials/footer') %>
	
</body>	
</html>
