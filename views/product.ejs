<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>



<body>
	<!-- Header -->

	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado') %>

	<% } else{ %>
		<%- include('./partials/headerDesLogueado') %>
	<% } %>

	<!-- /Header -->


	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/edit/<%= producto.id %>">Editar</a>  <!-- Esto tiene q redireccionar a product add -->
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.imagen %>" alt="" class="product-detail-img"> 
					<p class="product-detail-description">
						<%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i < producto.comentarios.length; i++) { %>
							<article>
								<img src= "/images/users/<%= producto.comentarios[i].foto_Perfil%>" alt=> 
								<div class="data">
									<p class="user">
										<strong> <a href="/user/profile%>"> <%= producto.comentarios[i].nombreUsuario%> </a> </strong> 
										<%= producto.comentarios[i].texto %>
									</p>
								</div>
							</article>
						<% } %>
						

					</section>
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<form class="form" action="/product/eliminar/<%= producto.id %>" method="post">
		<button type="submit">Eliminar publicaci√≥n</button>
	</form>

	

	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>