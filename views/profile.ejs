<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>


<body>
	<!-- Header -->
	<% if (user !== null) { %>
		<%- include('./partials/headerLogueado') %>

	<% } else{ %>
		<%- include('./partials/headerDesLogueado') %>
	<% } %>
	

	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%=usuario.username%>
						<% if (user.id === usuario.id) {%>
							<a href="/user/editProfile">
								<i class="fas fa-cog"></i>
							</a>
						<% } else { %> 
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						<% } %> 
				</div>
				<div>
					<ul class="">
						<li> <%= publicaciones.length %> productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < publicaciones.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= publicaciones[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= publicaciones[i].imagen %>" alt="imagen de <%= publicaciones[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= publicaciones[i].nombre %></h2>
							<p><%= publicaciones[i].descripcion %></p>
							<p>Comentarios: <%= publicaciones[i].comentarios_producto.length %></p>
						</article>
					</a>
				</section>
			</div>				
			<% } %>
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>